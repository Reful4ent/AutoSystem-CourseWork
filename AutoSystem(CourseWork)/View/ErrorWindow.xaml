            </StackPanel>
        </Grid>
        <Grid x:Name="ErrorRow" Grid.Row="1">
            <TextBlock x:Name="ErrorText" Style="{StaticResource ResourceKey=ErrorText_Style}"></TextBlock>  
        </Grid>
    </Grid>
</Window>
